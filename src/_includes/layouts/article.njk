---
layout: layouts/base.njk
---

{% block body %}
  <main class="w-full  bg-gradient-to-b from-mydark-500 via-mydark-300 to-mydark-500  flex justify-center ">
    <section class="container justify-center lg:w-8/12 flex flex-col lg:flex-row mx-auto w-full m-0  py-10">

      <div class="flex lg:justify-start flex-col text-center mb-5 flex-grow lg:pr-12 text-sm pb-5">
        <div class="flex lg:flex-col flex-row self-center lg:self-auto lg:pb-5 lg:w-20 gap-10 lg:gap-0">
          <span class="my-2 text-gray-400 flex items-center text-xs font-medium">
            {{ date | displayDate }}
          </span>
          <span class="my-2 text-gray-400 flex items-center text-xs font-medium">

            {% set wc = content | striptags | wordcount %}
            {% set wPerMinute = (wc / 200) + 1 %}
            {{ wPerMinute | round }} min read
          </span>
        </div>
        <div class="flex justify-center flex-wrap lg:flex-col lg:items-start">
          {% for tag in tags | displayTags %}
            <a
						href="/tags/{{tag}}"
            class="tag mt-4"
          >
              {{ tag }}
            </a>
          {% endfor %}

        </div>
      </div>
      <div class="flex flex-col markdown text-white ml-7">
        {{ content | safe }}
      </div>
    </section>
  </main>
{% endblock %}
