---
layout: layouts/base.njk
---

{% block body %}
  <main class="w-full bg-mydark-300 flex justify-center ">
    <section class="container justify-center lg:w-8/12 flex flex-col lg:flex-row mx-auto w-full m-0  py-10">
      <div class="flex justify-between lg:justify-start lg:flex-col text-center mb-5 flex-grow pr-12 text-sm">
        <div class="flex flex-col pb-5">
          <span class="my-2 text-gray-400 flex items-center font-light">
            {{ date | displayDate }}
          </span>
          <span class="my-2 text-gray-400 flex items-center font-light">

            {% set wc = content | striptags | wordcount %}
            {% set wPerMinute = (wc / 200) + 1 %}
            {{ wPerMinute | round }} min read.
          </span>
        </div>
        <div class="flex flex-col items-start">
          <span
          class="mt-4 py-1 px-2 bg-mygray-500 rounded-xl text-gray-200 text-opacity-75 text-xs font-medium tracking-widest">
          technology
        </span>
          <span
          class="mt-4 py-1 px-2 bg-mygray-500 rounded-xl text-gray-200 text-opacity-75 text-xs font-medium tracking-widest"
        >
          ui-ux
        </span>
        </div>
      </div>
      <div class="flex flex-col article-content markdown text-white">
        {{ content | safe }}
      </div>
    </section>
  </main>
{% endblock %}