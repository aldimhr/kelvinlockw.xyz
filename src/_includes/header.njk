<header x-data="{ mobileMenuOpen : false }" class="flex flex-wrap flex-row justify-between  md:items-start md:space-x-4 bg-mydark-500 py-3 px-6 relative xl:sticky xl:top-0 xl:bg-transparent xl:h-30">
    <a class="block title-font text-xl text-right" href="/">
      KELVIN   <br> LOCKWOOD
    </a>
  <button @click="mobileMenuOpen = !mobileMenuOpen" class="rounded inline-block md:hidden w-8 h-8 bg-mydark-100  p-1">
    <svg fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
    </svg>
  </button>
  <nav class="text-right absolute md:relative top-16 left-0 md:top-0 z-20 md:flex flex-col md:flex-row md:space-x-6 font-semibold w-full md:w-auto bg-mydark-100 shadow-md rounded-lg md:rounded-none md:shadow-none md:bg-transparent p-6 pt-0 md:p-0 bg-opacity-20"
  :class="{ 'flex' : mobileMenuOpen , 'hidden' : !mobileMenuOpen}"  @click.away="mobileMenuOpen = false"
  >
    {% for item in collections.all | eleventyNavigation %}
      <a
      class="block py-1 text-gray-200 text-opacity-90 hover:text-white {{ 'font-bold' if page.url == item.url }}"
      href="{{ item.url | url }}"
    >
        {{ item.title }}
      </a>
    {% endfor %}
  </nav>
</header>
